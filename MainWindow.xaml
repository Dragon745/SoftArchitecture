<Window x:Class="SoftArchitecture.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SoftArchitecture"

        mc:Ignorable="d"
        Title="Project Manager" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F3F3F3"
        BorderBrush="#CCCCCC"
        BorderThickness="1"
        Icon="Assets/app.ico">
    
    <Window.Resources>
        <!-- Professional TreeView Item Style -->
        <Style x:Key="ProfessionalTreeViewItemStyle" TargetType="TreeViewItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#1E1E1E"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Margin" Value="0,1"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="IsSelected" Value="False"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                    <Setter Property="BorderBrush" Value="#2196F3"/>
                    <Setter Property="BorderThickness" Value="0,0,0,2"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F5F5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Boolean to Visibility Converter -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Professional Button Style -->
        <Style x:Key="ProfessionalButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#F0F0F0"/>
            <Setter Property="Foreground" Value="#1E1E1E"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center" 
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E6E6E6"/>
                                <Setter Property="BorderBrush" Value="#B3B3B3"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#D4D4D4"/>
                                <Setter Property="BorderBrush" Value="#A6A6A6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Professional Menu Bar -->
        <Menu Grid.Row="0" Background="#F0F0F0" BorderBrush="#CCCCCC" BorderThickness="0,0,0,1">
            <MenuItem Header="File" Background="Transparent" Foreground="#1E1E1E">
                <MenuItem Header="Open Project Folder" Click="OpenFolderButton_Click"/>
                <MenuItem Header="Create Sample Data" Click="CreateSampleData_Click"/>
                <Separator/>
                <MenuItem Header="Exit" Click="ExitMenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="View" Background="Transparent" Foreground="#1E1E1E">
                <MenuItem Header="Refresh" Click="RefreshMenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="Help" Background="Transparent" Foreground="#1E1E1E">
                <MenuItem Header="About" Click="AboutMenuItem_Click"/>
            </MenuItem>
        </Menu>
        
        <!-- Professional Toolbar -->
        <ToolBar Grid.Row="1" Background="#F8F8F8" BorderBrush="#CCCCCC" BorderThickness="0,0,0,1">
            <Button Content="📁 Open Project" 
                    Style="{StaticResource ProfessionalButtonStyle}"
                    Click="OpenFolderButton_Click"
                    ToolTip="Open a project folder containing ToDo.json"/>
            <Separator/>
            <Button Content="📋 Create Sample Data" 
                    Style="{StaticResource ProfessionalButtonStyle}"
                    Click="CreateSampleData_Click"
                    ToolTip="Create sample ToDo.json and firebase_database.json files in a selected folder"/>
        </ToolBar>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="2">
            <TabControl x:Name="MainTabControl" 
                        Background="Transparent" 
                        BorderThickness="0">
                <TabControl.ItemContainerStyle>
                    <Style TargetType="TabItem">
                        <Setter Property="Background" Value="#F0F0F0"/>
                        <Setter Property="Foreground" Value="#1E1E1E"/>
                        <Setter Property="BorderBrush" Value="#CCCCCC"/>
                        <Setter Property="BorderThickness" Value="1,1,1,0"/>
                        <Setter Property="Padding" Value="15,8"/>
                        <Setter Property="FontSize" Value="13"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="BorderBrush" Value="#CCCCCC"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TabControl.ItemContainerStyle>
                
                <TabItem Header="ToDo">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Project Header -->
                        <Border Grid.Row="0" 
                                Background="White" 
                                BorderBrush="#CCCCCC" 
                                BorderThickness="0,0,0,1" 
                                Padding="20,15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Project Overview -->
                                <Border Grid.Column="0" 
                                        Background="#F8F8F8" 
                                        BorderBrush="#CCCCCC" 
                                        BorderThickness="1" 
                                        Padding="15,12" 
                                        Margin="0,0,10,0">
                                    <StackPanel>
                                        <TextBlock Text="Project Overview" 
                                                   FontSize="12" 
                                                   FontWeight="SemiBold" 
                                                   Foreground="#1E1E1E" 
                                                   Margin="0,0,0,5"/>
                                        <TextBlock x:Name="ProjectNameText" 
                                                   Text="No Project Loaded" 
                                                   FontSize="14" 
                                                   FontWeight="SemiBold" 
                                                   Foreground="#1E1E1E"
                                                   TextWrapping="Wrap"/>
                                        <TextBlock x:Name="ProjectDescriptionText" 
                                                   Text="Select a project folder to get started" 
                                                   FontSize="11" 
                                                   Foreground="#666666"
                                                   TextWrapping="Wrap"
                                                   Margin="0,3,0,0"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Quick Stats -->
                                <Border Grid.Column="1" 
                                        Background="#F0F8FF" 
                                        BorderBrush="#CCCCCC" 
                                        BorderThickness="1" 
                                        Padding="15,12" 
                                        Margin="5,0,5,0">
                                    <StackPanel>
                                        <TextBlock Text="Quick Stats" 
                                                   FontSize="12" 
                                                   FontWeight="SemiBold" 
                                                   Foreground="#1E1E1E" 
                                                   Margin="0,0,0,5"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- Total Phases -->
                                            <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                                <TextBlock Text="Phases" 
                                                           FontSize="10" 
                                                           Foreground="#666666"/>
                                                <TextBlock x:Name="TotalPhasesText" 
                                                           Text="0" 
                                                           FontSize="14" 
                                                           FontWeight="Bold" 
                                                           Foreground="#1E1E1E"/>
                                            </StackPanel>
                                            
                                            <!-- Total Tasks -->
                                            <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                                <TextBlock Text="Tasks" 
                                                           FontSize="10" 
                                                           Foreground="#666666"/>
                                                <TextBlock x:Name="TotalTasksText" 
                                                           Text="0" 
                                                           FontSize="14" 
                                                           FontWeight="Bold" 
                                                           Foreground="#1E1E1E"/>
                                            </StackPanel>
                                        </Grid>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Progress Summary -->
                                <Border Grid.Column="2" 
                                        Background="#F0FFF0" 
                                        BorderBrush="#CCCCCC" 
                                        BorderThickness="1" 
                                        Padding="15,12" 
                                        Margin="5,0,10,0">
                                    <StackPanel>
                                        <TextBlock Text="Progress" 
                                                   FontSize="12" 
                                                   FontWeight="SemiBold" 
                                                   Foreground="#1E1E1E" 
                                                   Margin="0,0,0,5"/>
                                        <TextBlock x:Name="ProjectStatsText" 
                                                   Text="No project loaded" 
                                                   FontSize="11" 
                                                   Foreground="#666666"
                                                   TextWrapping="Wrap"
                                                   LineHeight="14"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Help Info -->
                                <Border Grid.Column="3" 
                                        Background="#FFF8F0" 
                                        BorderBrush="#CCCCCC" 
                                        BorderThickness="1" 
                                        Padding="15,12">
                                    <StackPanel>
                                        <TextBlock Text="Help" 
                                                   FontSize="12" 
                                                   FontWeight="SemiBold" 
                                                   Foreground="#1E1E1E" 
                                                   Margin="0,0,0,5"/>
                                        <TextBlock Text="Phases are displayed in Panel 1" 
                                                   FontSize="10" 
                                                   Foreground="#666666"
                                                   TextWrapping="Wrap"
                                                   LineHeight="12"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Border>
                        
                        <!-- Main Content Area - Three Panels -->
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Panel 1 - Phases List -->
                            <Border Grid.Column="0" 
                                    Background="White" 
                                    BorderBrush="#CCCCCC" 
                                    BorderThickness="0,0,1,0">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Phases Header -->
                                    <Border Grid.Row="0" 
                                            Background="#F8F8F8" 
                                            BorderBrush="#CCCCCC" 
                                            BorderThickness="0,0,0,1" 
                                            Padding="15,12">
                                        <TextBlock Text="Project Phases" 
                                                   FontSize="14" 
                                                   FontWeight="SemiBold" 
                                                   Foreground="#1E1E1E"/>
                                    </Border>
                                    
                                    <!-- Phases List -->
                                    <ScrollViewer Grid.Row="1" 
                                                  VerticalScrollBarVisibility="Auto" 
                                                  HorizontalScrollBarVisibility="Disabled">
                                        <ItemsControl x:Name="PhasesList" 
                                                      Background="White"
                                                      Padding="10">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="Transparent" 
                                                            BorderBrush="#E0E0E0" 
                                                            BorderThickness="0,0,0,1" 
                                                            Padding="12,10" 
                                                            Margin="0,0,0,2"
                                                            Cursor="Hand"
                                                            MouseLeftButtonDown="OnPhaseBorderClicked">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                                        <Setter Property="Background" Value="#D4E6F7"/>
                                                                        <Setter Property="BorderBrush" Value="#2196F3"/>
                                                                        <Setter Property="BorderThickness" Value="0,0,0,3"/>
                                                                    </DataTrigger>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="Background" Value="#F0F8FF"/>
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="*"/>
                                                            </Grid.ColumnDefinitions>
                                                            
                                                            <!-- Phase CheckBox -->
                                                            <CheckBox Grid.Column="0" 
                                                                      IsChecked="{Binding IsCompleted}" 
                                                                      Checked="OnPhaseCheckBoxChanged"
                                                                      Unchecked="OnPhaseCheckBoxChanged"
                                                                      VerticalAlignment="Top" 
                                                                      Margin="0,0,10,0"/>
                                                            
                                                            <!-- Phase Content -->
                                                            <StackPanel Grid.Column="1">
                                                                <TextBlock Text="{Binding DisplayPhaseName}" 
                                                                           FontSize="13" 
                                                                           TextWrapping="Wrap">
                                                                    <TextBlock.Style>
                                                                        <Style TargetType="TextBlock">
                                                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                                                            <Setter Property="Foreground" Value="#1E1E1E"/>
                                                                            <Style.Triggers>
                                                                                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                                                    <Setter Property="Foreground" Value="#1565C0"/>
                                                                                </DataTrigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </TextBlock.Style>
                                                                </TextBlock>
                                                                <TextBlock Text="{Binding Goal}" 
                                                                           FontSize="11" 
                                                                           TextWrapping="Wrap" 
                                                                           Margin="0,3,0,0">
                                                                    <TextBlock.Style>
                                                                        <Style TargetType="TextBlock">
                                                                            <Setter Property="Foreground" Value="#666666"/>
                                                                            <Style.Triggers>
                                                                                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                                                    <Setter Property="Foreground" Value="#424242"/>
                                                                                    <Setter Property="FontWeight" Value="Medium"/>
                                                                                </DataTrigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </TextBlock.Style>
                                                                </TextBlock>
                                                                <TextBlock Text="{Binding TaskCountText}" 
                                                                           FontSize="10" 
                                                                           Foreground="#999999" 
                                                                           TextWrapping="Wrap" 
                                                                           Margin="0,4,0,0"/>
                                                            </StackPanel>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </Grid>
                            </Border>
                            
                            <!-- Panel 2 - Tasks List -->
                            <Border Grid.Column="1" 
                                    Background="White" 
                                    BorderBrush="#CCCCCC" 
                                    BorderThickness="0,0,1,0">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Tasks Header -->
                                    <Border Grid.Row="0" 
                                            Background="#F8F8F8" 
                                            BorderBrush="#CCCCCC" 
                                            BorderThickness="0,0,0,1" 
                                            Padding="15,12">
                                        <TextBlock x:Name="TasksHeaderText" 
                                                   Text="Tasks" 
                                                   FontSize="14" 
                                                   FontWeight="SemiBold" 
                                                   Foreground="#1E1E1E"/>
                                    </Border>
                                    
                                    <!-- Tasks List -->
                                    <ScrollViewer Grid.Row="1" 
                                                  VerticalScrollBarVisibility="Auto" 
                                                  HorizontalScrollBarVisibility="Disabled">
                                        <ItemsControl x:Name="TasksList" 
                                                      Background="White"
                                                      Padding="10">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                                                                         <Border Background="Transparent" 
                                                             BorderBrush="#E0E0E0" 
                                                             BorderThickness="0,0,0,1" 
                                                             Padding="12,10" 
                                                             Margin="0,0,0,2"
                                                             Cursor="Hand"
                                                             MouseLeftButtonDown="OnTaskBorderClicked">
                                                         <Border.Style>
                                                             <Style TargetType="Border">
                                                                 <Style.Triggers>
                                                                     <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                                         <Setter Property="Background" Value="#D4E6F7"/>
                                                                         <Setter Property="BorderBrush" Value="#2196F3"/>
                                                                         <Setter Property="BorderThickness" Value="0,0,0,3"/>
                                                                     </DataTrigger>
                                                                     <Trigger Property="IsMouseOver" Value="True">
                                                                         <Setter Property="Background" Value="#F0F8FF"/>
                                                                     </Trigger>
                                                                 </Style.Triggers>
                                                             </Style>
                                                         </Border.Style>
                                                         <Grid>
                                                             <Grid.ColumnDefinitions>
                                                                 <ColumnDefinition Width="Auto"/>
                                                                 <ColumnDefinition Width="*"/>
                                                             </Grid.ColumnDefinitions>
                                                             
                                                             <!-- Task CheckBox -->
                                                             <CheckBox Grid.Column="0" 
                                                                       IsChecked="{Binding IsCompleted}" 
                                                                       Checked="OnTaskCheckBoxChanged"
                                                                       Unchecked="OnTaskCheckBoxChanged"
                                                                       VerticalAlignment="Top" 
                                                                       Margin="0,0,10,0"/>
                                                             
                                                             <!-- Task Content -->
                                                             <StackPanel Grid.Column="1">
                                                                                                                                   <TextBlock Text="{Binding TaskName}" 
                                                                             FontSize="13" 
                                                                             TextWrapping="Wrap">
                                                                     <TextBlock.Style>
                                                                         <Style TargetType="TextBlock">
                                                                             <Setter Property="FontWeight" Value="SemiBold"/>
                                                                             <Setter Property="Foreground" Value="#1E1E1E"/>
                                                                             <Style.Triggers>
                                                                                 <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                                                     <Setter Property="FontWeight" Value="Bold"/>
                                                                                     <Setter Property="Foreground" Value="#1565C0"/>
                                                                                 </DataTrigger>
                                                                             </Style.Triggers>
                                                                         </Style>
                                                                     </TextBlock.Style>
                                                                 </TextBlock>
                                                                 <TextBlock Text="{Binding Goal}" 
                                                                            FontSize="11" 
                                                                            TextWrapping="Wrap" 
                                                                            Margin="0,3,0,0">
                                                                     <TextBlock.Style>
                                                                         <Style TargetType="TextBlock">
                                                                             <Setter Property="Foreground" Value="#666666"/>
                                                                             <Style.Triggers>
                                                                                 <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                                                     <Setter Property="Foreground" Value="#424242"/>
                                                                                     <Setter Property="FontWeight" Value="Medium"/>
                                                                                 </DataTrigger>
                                                                             </Style.Triggers>
                                                                         </Style>
                                                                     </TextBlock.Style>
                                                                 </TextBlock>
                                                                 
                                                             </StackPanel>
                                                         </Grid>
                                                     </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </ScrollViewer>
                                    </Grid>
                                </Border>
                            
                            <!-- Panel 3 - Task Details -->
                            <Border Grid.Column="2" 
                                    Background="White" 
                                    BorderBrush="#CCCCCC" 
                                    BorderThickness="0">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Details Header -->
                                    <Border Grid.Row="0" 
                                            Background="#F8F8F8" 
                                            BorderBrush="#CCCCCC" 
                                            BorderThickness="0,0,0,1" 
                                            Padding="15,12">
                                        <TextBlock x:Name="DetailsHeaderText" 
                                                   Text="Task Details" 
                                                   FontSize="14" 
                                                   FontWeight="SemiBold" 
                                                   Foreground="#1E1E1E"/>
                                    </Border>
                                    
                                    <!-- Details Content -->
                                    <ScrollViewer Grid.Row="1" 
                                                  VerticalScrollBarVisibility="Auto" 
                                                  HorizontalScrollBarVisibility="Disabled">
                                        <StackPanel x:Name="DetailsContentPanel" 
                                                    Margin="15,12">
                                            <TextBlock Text="Phases are displayed in Panel 1" 
                                                       FontSize="13" 
                                                       Foreground="#666666" 
                                                       TextWrapping="Wrap"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Margin="0,50,0,0"/>
                                        </StackPanel>
                                    </ScrollViewer>
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>
                </TabItem>
                
                <TabItem Header="Firebase Database">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Firebase Database Header -->
                        <Border Grid.Row="0" 
                                Background="White" 
                                BorderBrush="#CCCCCC" 
                                BorderThickness="0,0,0,1" 
                                Padding="20,15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Database Overview -->
                                <Border Grid.Column="0" 
                                        Background="#F8F8F8" 
                                        BorderBrush="#CCCCCC" 
                                        BorderThickness="1" 
                                        Padding="15,12" 
                                        Margin="0,0,10,0">
                                    <StackPanel>
                                        <TextBlock Text="Firebase Database Schema" 
                                                   FontSize="12" 
                                                   FontWeight="SemiBold" 
                                                   Foreground="#1E1E1E" 
                                                   Margin="0,0,0,5"/>
                                        <TextBlock x:Name="DatabaseNameText" 
                                                   Text="Firebase Database" 
                                                   FontSize="14" 
                                                   FontWeight="SemiBold" 
                                                   Foreground="#1E1E1E"
                                                   TextWrapping="Wrap"/>
                                        <TextBlock x:Name="DatabaseDescriptionText" 
                                                   Text="Database collections and field definitions" 
                                                   FontSize="11" 
                                                   Foreground="#666666"
                                                   TextWrapping="Wrap"
                                                   Margin="0,3,0,0"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Database Stats -->
                                <Border Grid.Column="1" 
                                        Background="#F0F8FF" 
                                        BorderBrush="#CCCCCC" 
                                        BorderThickness="1" 
                                        Padding="15,12">
                                    <StackPanel>
                                        <TextBlock Text="Database Stats" 
                                                   FontSize="12" 
                                                   FontWeight="SemiBold" 
                                                   Foreground="#1E1E1E" 
                                                   Margin="0,0,0,5"/>
                                        <TextBlock x:Name="TotalCollectionsText" 
                                                   Text="0 Collections" 
                                                   FontSize="14" 
                                                   FontWeight="Bold" 
                                                   Foreground="#1E1E1E"/>
                                        <TextBlock x:Name="TotalFieldsText" 
                                                   Text="0 Fields" 
                                                   FontSize="11" 
                                                   Foreground="#666666"
                                                   Margin="0,3,0,0"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Border>
                        
                        <!-- Main Content Area - TreeView -->
                        <Border Grid.Row="1" 
                                Background="White" 
                                BorderBrush="#CCCCCC" 
                                BorderThickness="0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <!-- TreeView Header -->
                                <Border Grid.Row="0" 
                                        Background="#F8F8F8" 
                                        BorderBrush="#CCCCCC" 
                                        BorderThickness="0,0,0,1" 
                                        Padding="15,12">
                                    <TextBlock Text="Database Schema Tree" 
                                               FontSize="14" 
                                               FontWeight="SemiBold" 
                                               Foreground="#1E1E1E"/>
                                </Border>
                                
                                                                                                                                   <!-- Collections Grid Display -->
                                 <ScrollViewer Grid.Row="1" 
                                               VerticalScrollBarVisibility="Auto" 
                                               HorizontalScrollBarVisibility="Auto">
                                     <Grid x:Name="DatabaseSchemaPanel" 
                                           Background="White"
                                           Margin="15">
                                         <Grid.RowDefinitions>
                                             <RowDefinition Height="Auto"/>
                                             <RowDefinition Height="*"/>
                                         </Grid.RowDefinitions>
                                         
                                         <!-- Database Header -->
                                         <Border Grid.Row="0" 
                                                 Background="#F8F9FA" 
                                                 BorderBrush="#E9ECEF" 
                                                 BorderThickness="1" 
                                                 CornerRadius="6"
                                                 Padding="20,15" 
                                                 Margin="0,0,0,20">
                                             <Grid>
                                                 <Grid.ColumnDefinitions>
                                                     <ColumnDefinition Width="Auto"/>
                                                     <ColumnDefinition Width="*"/>
                                                 </Grid.ColumnDefinitions>
                                                 
                                                 <!-- Database Icon -->
                                                 <TextBlock Grid.Column="0" 
                                                            Text="🗄️" 
                                                            FontSize="24" 
                                                            Margin="0,0,15,0"
                                                            VerticalAlignment="Top"/>
                                                 
                                                 <!-- Database Content -->
                                                 <StackPanel Grid.Column="1">
                                                     <TextBlock Text="Firebase Database Schema" 
                                                                FontSize="18" 
                                                                FontWeight="Bold" 
                                                                Foreground="#1E1E1E"
                                                                Margin="0,0,0,8"/>
                                                     <TextBlock Text="Database collections and field definitions displayed as cards" 
                                                                FontSize="13" 
                                                                Foreground="#666666"
                                                                TextWrapping="Wrap"/>
                                                 </StackPanel>
                                             </Grid>
                                         </Border>
                                         
                                                                                   <!-- Collections Grid -->
                                          <ItemsControl Grid.Row="1" x:Name="CollectionsContainer">
                                              <ItemsControl.ItemsPanel>
                                                  <ItemsPanelTemplate>
                                                      <UniformGrid Columns="4" Rows="0"/>
                                                  </ItemsPanelTemplate>
                                              </ItemsControl.ItemsPanel>
                                              <ItemsControl.ItemTemplate>
                                                  <DataTemplate>
                                                      <Border Background="White" 
                                                              BorderBrush="#E9ECEF" 
                                                              BorderThickness="1" 
                                                              CornerRadius="8"
                                                              Padding="20,15" 
                                                              Margin="8"
                                                              MinWidth="250"
                                                              MaxWidth="400"
                                                              Effect="{x:Null}">
                                                         <Border.Style>
                                                             <Style TargetType="Border">
                                                                 <Style.Triggers>
                                                                     <Trigger Property="IsMouseOver" Value="True">
                                                                         <Setter Property="BorderBrush" Value="#2196F3"/>
                                                                         <Setter Property="BorderThickness" Value="2"/>
                                                                         <Setter Property="Effect">
                                                                             <Setter.Value>
                                                                                 <DropShadowEffect Color="#2196F3" 
                                                                                                   BlurRadius="10" 
                                                                                                   ShadowDepth="3" 
                                                                                                   Opacity="0.3"/>
                                                                             </Setter.Value>
                                                                         </Setter>
                                                                     </Trigger>
                                                                 </Style.Triggers>
                                                             </Style>
                                                         </Border.Style>
                                                         
                                                                                                                   <Grid>
                                                              <Grid.RowDefinitions>
                                                                  <RowDefinition Height="Auto"/>
                                                                  <RowDefinition Height="Auto"/>
                                                                  <RowDefinition Height="Auto"/>
                                                                  <RowDefinition Height="Auto"/>
                                                              </Grid.RowDefinitions>
                                                             
                                                             <!-- Collection Header -->
                                                             <Grid Grid.Row="0" Margin="0,0,0,12">
                                                                 <Grid.ColumnDefinitions>
                                                                     <ColumnDefinition Width="Auto"/>
                                                                     <ColumnDefinition Width="*"/>
                                                                 </Grid.ColumnDefinitions>
                                                                 
                                                                 <!-- Collection Icon -->
                                                                 <TextBlock Grid.Column="0" 
                                                                            Text="📁" 
                                                                            FontSize="20" 
                                                                            Margin="0,0,10,0"
                                                                            VerticalAlignment="Top"/>
                                                                 
                                                                 <!-- Collection Name -->
                                                                 <StackPanel Grid.Column="1">
                                                                     <TextBlock Text="{Binding Name}" 
                                                                                FontSize="16" 
                                                                                FontWeight="Bold" 
                                                                                Foreground="#1E1E1E"
                                                                                TextWrapping="Wrap"
                                                                                LineHeight="20"/>
                                                                     <TextBlock Text="{Binding Children.Count, StringFormat='{}{0} fields'}" 
                                                                                FontSize="11" 
                                                                                Foreground="#666666"
                                                                                Margin="0,4,0,0"/>
                                                                 </StackPanel>
                                                             </Grid>
                                                             
                                                             <!-- Collection Description -->
                                                             <TextBlock Grid.Row="1" 
                                                                        Text="{Binding Description}" 
                                                                        FontSize="12" 
                                                                        Foreground="#666666" 
                                                                        TextWrapping="Wrap" 
                                                                        Margin="0,0,0,12"
                                                                        LineHeight="16"/>
                                                             
                                                                                                                           <!-- Fields Preview -->
                                                              <StackPanel Grid.Row="2" 
                                                                         Margin="0,0,0,12">
                                                                  <TextBlock Text="Fields:" 
                                                                             FontSize="11" 
                                                                             FontWeight="SemiBold" 
                                                                             Foreground="#666666" 
                                                                             Margin="0,0,0,6"/>
                                                                  <ItemsControl ItemsSource="{Binding Children}">
                                                                      <ItemsControl.ItemTemplate>
                                                                          <DataTemplate>
                                                                              <Border Background="#F8F9FA" 
                                                                                      BorderBrush="#E9ECEF" 
                                                                                      BorderThickness="1" 
                                                                                      CornerRadius="4"
                                                                                      Padding="10,8" 
                                                                                      Margin="0,0,0,6">
                                                                                  <Grid>
                                                                                      <Grid.ColumnDefinitions>
                                                                                          <ColumnDefinition Width="Auto"/>
                                                                                          <ColumnDefinition Width="*"/>
                                                                                      </Grid.ColumnDefinitions>
                                                                                      
                                                                                      <!-- Field Icon -->
                                                                                      <TextBlock Grid.Column="0" 
                                                                                                 Text="📄" 
                                                                                                 FontSize="12" 
                                                                                                 Margin="0,0,8,0"
                                                                                                 VerticalAlignment="Top"/>
                                                                                      
                                                                                      <!-- Field Content -->
                                                                                      <StackPanel Grid.Column="1">
                                                                                          <TextBlock Text="{Binding Name}" 
                                                                                                     FontSize="12" 
                                                                                                     FontWeight="SemiBold" 
                                                                                                     Foreground="#1E1E1E"
                                                                                                     TextWrapping="Wrap"
                                                                                                     LineHeight="14"/>
                                                                                          <TextBlock Text="{Binding Description}" 
                                                                                                     FontSize="10" 
                                                                                                     Foreground="#666666" 
                                                                                                     TextWrapping="Wrap" 
                                                                                                     Margin="0,2,0,0"
                                                                                                     LineHeight="12"/>
                                                                                      </StackPanel>
                                                                                  </Grid>
                                                                              </Border>
                                                                          </DataTemplate>
                                                                      </ItemsControl.ItemTemplate>
                                                                  </ItemsControl>
                                                              </StackPanel>
                                                             
                                                                                                                           <!-- Additional Note -->
                                                              <TextBlock Grid.Row="3" 
                                                                         Text="{Binding AdditionalNote}" 
                                                                         FontSize="10" 
                                                                         Foreground="#999999" 
                                                                         TextWrapping="Wrap" 
                                                                         Margin="0,0,0,0"
                                                                         Visibility="{Binding ShowAdditionalNote}"
                                                                         FontStyle="Italic"
                                                                         LineHeight="12"/>
                                                         </Grid>
                                                     </Border>
                                                 </DataTemplate>
                                             </ItemsControl.ItemTemplate>
                                         </ItemsControl>
                                     </Grid>
                                 </ScrollViewer>
                            </Grid>
                        </Border>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
        
        <!-- Loading Overlay -->
        <Border x:Name="LoadingOverlay" 
                Grid.RowSpan="3" 
                Background="#80000000" 
                Visibility="Collapsed">
            <Grid>
                <Border Background="White" 
                        BorderBrush="#CCCCCC" 
                        BorderThickness="1"
                        Padding="30" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center">
                    <StackPanel HorizontalAlignment="Center">
                        <ProgressBar IsIndeterminate="True" 
                                     Width="200" 
                                     Height="3" 
                                     Margin="0,0,0,15"/>
                        <TextBlock Text="Loading project..." 
                                   Foreground="#1E1E1E" 
                                   FontSize="14" 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
