<Window x:Class="SoftArchitecture.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SoftArchitecture"

        mc:Ignorable="d"
        Title="Project Manager" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F3F3F3"
        BorderBrush="#CCCCCC"
        BorderThickness="1">
    
    <Window.Resources>
        <!-- Professional TreeView Item Style -->
        <Style x:Key="ProfessionalTreeViewItemStyle" TargetType="TreeViewItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#1E1E1E"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Margin" Value="0,1"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="IsSelected" Value="False"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#3399FF"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E5F3FF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Professional Button Style -->
        <Style x:Key="ProfessionalButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#F0F0F0"/>
            <Setter Property="Foreground" Value="#1E1E1E"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center" 
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E6E6E6"/>
                                <Setter Property="BorderBrush" Value="#B3B3B3"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#D4D4D4"/>
                                <Setter Property="BorderBrush" Value="#A6A6A6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Professional Menu Bar -->
        <Menu Grid.Row="0" Background="#F0F0F0" BorderBrush="#CCCCCC" BorderThickness="0,0,0,1">
            <MenuItem Header="File" Background="Transparent" Foreground="#1E1E1E">
                <MenuItem Header="Open Project Folder" Click="OpenFolderButton_Click"/>
                <Separator/>
                <MenuItem Header="Exit" Click="ExitMenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="View" Background="Transparent" Foreground="#1E1E1E">
                <MenuItem Header="Refresh" Click="RefreshMenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="Help" Background="Transparent" Foreground="#1E1E1E">
                <MenuItem Header="About" Click="AboutMenuItem_Click"/>
            </MenuItem>
        </Menu>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <TabControl x:Name="MainTabControl" 
                        Background="Transparent" 
                        BorderThickness="0">
                <TabControl.ItemContainerStyle>
                    <Style TargetType="TabItem">
                        <Setter Property="Background" Value="#F0F0F0"/>
                        <Setter Property="Foreground" Value="#1E1E1E"/>
                        <Setter Property="BorderBrush" Value="#CCCCCC"/>
                        <Setter Property="BorderThickness" Value="1,1,1,0"/>
                        <Setter Property="Padding" Value="15,8"/>
                        <Setter Property="FontSize" Value="13"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="BorderBrush" Value="#CCCCCC"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TabControl.ItemContainerStyle>
                
                <TabItem Header="ToDo">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Project Header -->
                        <Border Grid.Row="0" 
                                Background="White" 
                                BorderBrush="#CCCCCC" 
                                BorderThickness="0,0,0,1" 
                                Padding="20,15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Project Overview -->
                                <Border Grid.Column="0" 
                                        Background="#F8F8F8" 
                                        BorderBrush="#CCCCCC" 
                                        BorderThickness="1" 
                                        Padding="15,12" 
                                        Margin="0,0,10,0">
                                    <StackPanel>
                                        <TextBlock Text="Project Overview" 
                                                   FontSize="12" 
                                                   FontWeight="SemiBold" 
                                                   Foreground="#1E1E1E" 
                                                   Margin="0,0,0,5"/>
                                        <TextBlock x:Name="ProjectNameText" 
                                                   Text="No Project Loaded" 
                                                   FontSize="14" 
                                                   FontWeight="SemiBold" 
                                                   Foreground="#1E1E1E"
                                                   TextWrapping="Wrap"/>
                                        <TextBlock x:Name="ProjectDescriptionText" 
                                                   Text="Select a project folder to get started" 
                                                   FontSize="11" 
                                                   Foreground="#666666"
                                                   TextWrapping="Wrap"
                                                   Margin="0,3,0,0"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Quick Stats -->
                                <Border Grid.Column="1" 
                                        Background="#F0F8FF" 
                                        BorderBrush="#CCCCCC" 
                                        BorderThickness="1" 
                                        Padding="15,12" 
                                        Margin="5,0,5,0">
                                    <StackPanel>
                                        <TextBlock Text="Quick Stats" 
                                                   FontSize="12" 
                                                   FontWeight="SemiBold" 
                                                   Foreground="#1E1E1E" 
                                                   Margin="0,0,0,5"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- Total Phases -->
                                            <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                                <TextBlock Text="Phases" 
                                                           FontSize="10" 
                                                           Foreground="#666666"/>
                                                <TextBlock x:Name="TotalPhasesText" 
                                                           Text="0" 
                                                           FontSize="14" 
                                                           FontWeight="Bold" 
                                                           Foreground="#1E1E1E"/>
                                            </StackPanel>
                                            
                                            <!-- Total Tasks -->
                                            <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                                <TextBlock Text="Tasks" 
                                                           FontSize="10" 
                                                           Foreground="#666666"/>
                                                <TextBlock x:Name="TotalTasksText" 
                                                           Text="0" 
                                                           FontSize="14" 
                                                           FontWeight="Bold" 
                                                           Foreground="#1E1E1E"/>
                                            </StackPanel>
                                        </Grid>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Progress Summary -->
                                <Border Grid.Column="2" 
                                        Background="#F0FFF0" 
                                        BorderBrush="#CCCCCC" 
                                        BorderThickness="1" 
                                        Padding="15,12" 
                                        Margin="5,0,10,0">
                                    <StackPanel>
                                        <TextBlock Text="Progress" 
                                                   FontSize="12" 
                                                   FontWeight="SemiBold" 
                                                   Foreground="#1E1E1E" 
                                                   Margin="0,0,0,5"/>
                                        <TextBlock x:Name="ProjectStatsText" 
                                                   Text="No project loaded" 
                                                   FontSize="11" 
                                                   Foreground="#666666"
                                                   TextWrapping="Wrap"
                                                   LineHeight="14"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Help Info -->
                                <Border Grid.Column="3" 
                                        Background="#FFF8F0" 
                                        BorderBrush="#CCCCCC" 
                                        BorderThickness="1" 
                                        Padding="15,12">
                                    <StackPanel>
                                        <TextBlock Text="Help" 
                                                   FontSize="12" 
                                                   FontWeight="SemiBold" 
                                                   Foreground="#1E1E1E" 
                                                   Margin="0,0,0,5"/>
                                        <TextBlock Text="Phases are displayed in Panel 1" 
                                                   FontSize="10" 
                                                   Foreground="#666666"
                                                   TextWrapping="Wrap"
                                                   LineHeight="12"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Border>
                        
                        <!-- Main Content Area - Three Panels -->
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Panel 1 - Phases List -->
                            <Border Grid.Column="0" 
                                    Background="White" 
                                    BorderBrush="#CCCCCC" 
                                    BorderThickness="0,0,1,0">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Phases Header -->
                                    <Border Grid.Row="0" 
                                            Background="#F8F8F8" 
                                            BorderBrush="#CCCCCC" 
                                            BorderThickness="0,0,0,1" 
                                            Padding="15,12">
                                        <TextBlock Text="Project Phases" 
                                                   FontSize="14" 
                                                   FontWeight="SemiBold" 
                                                   Foreground="#1E1E1E"/>
                                    </Border>
                                    
                                    <!-- Phases List -->
                                    <ScrollViewer Grid.Row="1" 
                                                  VerticalScrollBarVisibility="Auto" 
                                                  HorizontalScrollBarVisibility="Disabled">
                                        <ItemsControl x:Name="PhasesList" 
                                                      Background="White"
                                                      Padding="10">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="Transparent" 
                                                            BorderBrush="#E0E0E0" 
                                                            BorderThickness="0,0,0,1" 
                                                            Padding="12,10" 
                                                            Margin="0,0,0,2"
                                                            Cursor="Hand"
                                                            MouseLeftButtonDown="OnPhaseBorderClicked">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                                        <Setter Property="Background" Value="#D4E6F7"/>
                                                                        <Setter Property="BorderBrush" Value="#2196F3"/>
                                                                        <Setter Property="BorderThickness" Value="0,0,0,3"/>
                                                                    </DataTrigger>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="Background" Value="#F0F8FF"/>
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="*"/>
                                                            </Grid.ColumnDefinitions>
                                                            
                                                            <!-- Phase CheckBox -->
                                                            <CheckBox Grid.Column="0" 
                                                                      IsChecked="{Binding IsCompleted}" 
                                                                      Checked="OnPhaseCheckBoxChanged"
                                                                      Unchecked="OnPhaseCheckBoxChanged"
                                                                      VerticalAlignment="Top" 
                                                                      Margin="0,0,10,0"/>
                                                            
                                                            <!-- Phase Content -->
                                                            <StackPanel Grid.Column="1">
                                                                <TextBlock Text="{Binding DisplayPhaseName}" 
                                                                           FontSize="13" 
                                                                           TextWrapping="Wrap">
                                                                    <TextBlock.Style>
                                                                        <Style TargetType="TextBlock">
                                                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                                                            <Setter Property="Foreground" Value="#1E1E1E"/>
                                                                            <Style.Triggers>
                                                                                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                                                    <Setter Property="Foreground" Value="#1565C0"/>
                                                                                </DataTrigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </TextBlock.Style>
                                                                </TextBlock>
                                                                <TextBlock Text="{Binding Goal}" 
                                                                           FontSize="11" 
                                                                           TextWrapping="Wrap" 
                                                                           Margin="0,3,0,0">
                                                                    <TextBlock.Style>
                                                                        <Style TargetType="TextBlock">
                                                                            <Setter Property="Foreground" Value="#666666"/>
                                                                            <Style.Triggers>
                                                                                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                                                    <Setter Property="Foreground" Value="#424242"/>
                                                                                    <Setter Property="FontWeight" Value="Medium"/>
                                                                                </DataTrigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </TextBlock.Style>
                                                                </TextBlock>
                                                                <TextBlock Text="{Binding TaskCountText}" 
                                                                           FontSize="10" 
                                                                           Foreground="#999999" 
                                                                           TextWrapping="Wrap" 
                                                                           Margin="0,4,0,0"/>
                                                            </StackPanel>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </Grid>
                            </Border>
                            
                            <!-- Panel 2 - Tasks List -->
                            <Border Grid.Column="1" 
                                    Background="White" 
                                    BorderBrush="#CCCCCC" 
                                    BorderThickness="0,0,1,0">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Tasks Header -->
                                    <Border Grid.Row="0" 
                                            Background="#F8F8F8" 
                                            BorderBrush="#CCCCCC" 
                                            BorderThickness="0,0,0,1" 
                                            Padding="15,12">
                                        <TextBlock x:Name="TasksHeaderText" 
                                                   Text="Tasks" 
                                                   FontSize="14" 
                                                   FontWeight="SemiBold" 
                                                   Foreground="#1E1E1E"/>
                                    </Border>
                                    
                                    <!-- Tasks List -->
                                    <ScrollViewer Grid.Row="1" 
                                                  VerticalScrollBarVisibility="Auto" 
                                                  HorizontalScrollBarVisibility="Disabled">
                                        <ItemsControl x:Name="TasksList" 
                                                      Background="White"
                                                      Padding="10">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                                                                         <Border Background="Transparent" 
                                                             BorderBrush="#E0E0E0" 
                                                             BorderThickness="0,0,0,1" 
                                                             Padding="12,10" 
                                                             Margin="0,0,0,2"
                                                             Cursor="Hand"
                                                             MouseLeftButtonDown="OnTaskBorderClicked">
                                                         <Border.Style>
                                                             <Style TargetType="Border">
                                                                 <Style.Triggers>
                                                                     <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                                         <Setter Property="Background" Value="#D4E6F7"/>
                                                                         <Setter Property="BorderBrush" Value="#2196F3"/>
                                                                         <Setter Property="BorderThickness" Value="0,0,0,3"/>
                                                                     </DataTrigger>
                                                                     <Trigger Property="IsMouseOver" Value="True">
                                                                         <Setter Property="Background" Value="#F0F8FF"/>
                                                                     </Trigger>
                                                                 </Style.Triggers>
                                                             </Style>
                                                         </Border.Style>
                                                         <Grid>
                                                             <Grid.ColumnDefinitions>
                                                                 <ColumnDefinition Width="Auto"/>
                                                                 <ColumnDefinition Width="*"/>
                                                             </Grid.ColumnDefinitions>
                                                             
                                                             <!-- Task CheckBox -->
                                                             <CheckBox Grid.Column="0" 
                                                                       IsChecked="{Binding IsCompleted}" 
                                                                       Checked="OnTaskCheckBoxChanged"
                                                                       Unchecked="OnTaskCheckBoxChanged"
                                                                       VerticalAlignment="Top" 
                                                                       Margin="0,0,10,0"/>
                                                             
                                                             <!-- Task Content -->
                                                             <StackPanel Grid.Column="1">
                                                                                                                                   <TextBlock Text="{Binding TaskName}" 
                                                                             FontSize="13" 
                                                                             TextWrapping="Wrap">
                                                                     <TextBlock.Style>
                                                                         <Style TargetType="TextBlock">
                                                                             <Setter Property="FontWeight" Value="SemiBold"/>
                                                                             <Setter Property="Foreground" Value="#1E1E1E"/>
                                                                             <Style.Triggers>
                                                                                 <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                                                     <Setter Property="FontWeight" Value="Bold"/>
                                                                                     <Setter Property="Foreground" Value="#1565C0"/>
                                                                                 </DataTrigger>
                                                                             </Style.Triggers>
                                                                         </Style>
                                                                     </TextBlock.Style>
                                                                 </TextBlock>
                                                                 <TextBlock Text="{Binding Goal}" 
                                                                            FontSize="11" 
                                                                            TextWrapping="Wrap" 
                                                                            Margin="0,3,0,0">
                                                                     <TextBlock.Style>
                                                                         <Style TargetType="TextBlock">
                                                                             <Setter Property="Foreground" Value="#666666"/>
                                                                             <Style.Triggers>
                                                                                 <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                                                     <Setter Property="Foreground" Value="#424242"/>
                                                                                     <Setter Property="FontWeight" Value="Medium"/>
                                                                                 </DataTrigger>
                                                                             </Style.Triggers>
                                                                         </Style>
                                                                     </TextBlock.Style>
                                                                 </TextBlock>
                                                                 
                                                             </StackPanel>
                                                         </Grid>
                                                     </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </ScrollViewer>
                                    </Grid>
                                </Border>
                            
                            <!-- Panel 3 - Task Details -->
                            <Border Grid.Column="2" 
                                    Background="White" 
                                    BorderBrush="#CCCCCC" 
                                    BorderThickness="0">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Details Header -->
                                    <Border Grid.Row="0" 
                                            Background="#F8F8F8" 
                                            BorderBrush="#CCCCCC" 
                                            BorderThickness="0,0,0,1" 
                                            Padding="15,12">
                                        <TextBlock x:Name="DetailsHeaderText" 
                                                   Text="Task Details" 
                                                   FontSize="14" 
                                                   FontWeight="SemiBold" 
                                                   Foreground="#1E1E1E"/>
                                    </Border>
                                    
                                    <!-- Details Content -->
                                    <ScrollViewer Grid.Row="1" 
                                                  VerticalScrollBarVisibility="Auto" 
                                                  HorizontalScrollBarVisibility="Disabled">
                                        <StackPanel x:Name="DetailsContentPanel" 
                                                    Margin="15,12">
                                            <TextBlock Text="Phases are displayed in Panel 1" 
                                                       FontSize="13" 
                                                       Foreground="#666666" 
                                                       TextWrapping="Wrap"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Margin="0,50,0,0"/>
                                        </StackPanel>
                                    </ScrollViewer>
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
        
        <!-- Loading Overlay -->
        <Border x:Name="LoadingOverlay" 
                Grid.RowSpan="2" 
                Background="#80000000" 
                Visibility="Collapsed">
            <Grid>
                <Border Background="White" 
                        BorderBrush="#CCCCCC" 
                        BorderThickness="1"
                        Padding="30" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center">
                    <StackPanel HorizontalAlignment="Center">
                        <ProgressBar IsIndeterminate="True" 
                                     Width="200" 
                                     Height="3" 
                                     Margin="0,0,0,15"/>
                        <TextBlock Text="Loading project..." 
                                   Foreground="#1E1E1E" 
                                   FontSize="14" 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
