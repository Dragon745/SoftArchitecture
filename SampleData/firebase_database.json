{
  "Collections": {
    "users": {
      "collectionDescription": "User accounts and profile information",
      "collectionAdditionalNote": "Stores user authentication data, preferences, and extended profile information",
      "fields": {
        "uid": {
          "fieldDescription": "Unique user identifier from Firebase Auth",
          "additionalNote": "Required field, used as document ID"
        },
        "email": {
          "fieldDescription": "User's email address",
          "additionalNote": "Required field, must be unique"
        },
        "displayName": {
          "fieldDescription": "User's display name",
          "additionalNote": "Optional field, shown in UI"
        },
        "role": {
          "fieldDescription": "User role in the system",
          "additionalNote": "Values: admin, developer, designer, viewer"
        },
        "isActive": {
          "fieldDescription": "Whether the user account is active",
          "additionalNote": "Used for account suspension"
        },
        "preferences": {
          "fieldDescription": "User preferences and settings",
          "additionalNote": "Nested object with theme, language, notifications"
        },
        "profile": {
          "fieldDescription": "Extended profile information",
          "additionalNote": "Nested object with bio, skills, location"
        }
      }
    },
    "projects": {
      "collectionDescription": "Project information and team collaboration",
      "collectionAdditionalNote": "Manages project data, team members, and project settings",
      "fields": {
        "name": {
          "fieldDescription": "Project name",
          "additionalNote": "Required field, displayed in project list"
        },
        "description": {
          "fieldDescription": "Project description",
          "additionalNote": "Optional field, provides project details"
        },
        "status": {
          "fieldDescription": "Current project status",
          "additionalNote": "Values: planning, active, completed, archived"
        },
        "createdBy": {
          "fieldDescription": "User ID of project creator",
          "additionalNote": "Reference to users collection"
        },
        "members": {
          "fieldDescription": "Project team members",
          "additionalNote": "Nested object with user roles and permissions"
        },
        "settings": {
          "fieldDescription": "Project-specific settings",
          "additionalNote": "Visibility, comments, auto-save options"
        },
        "progress": {
          "fieldDescription": "Project completion progress",
          "additionalNote": "Percentage complete and last updated timestamp"
        }
      }
    },
    "tasks": {
      "collectionDescription": "Individual tasks within projects",
      "collectionAdditionalNote": "Task management with assignments, status tracking, and time management",
      "fields": {
        "title": {
          "fieldDescription": "Task title",
          "additionalNote": "Required field, displayed in task list"
        },
        "description": {
          "fieldDescription": "Task description",
          "additionalNote": "Optional field, detailed task information"
        },
        "status": {
          "fieldDescription": "Current task status",
          "additionalNote": "Values: todo, in_progress, completed, cancelled"
        },
        "priority": {
          "fieldDescription": "Task priority level",
          "additionalNote": "Values: low, medium, high, urgent"
        },
        "assignedTo": {
          "fieldDescription": "User ID of assigned person",
          "additionalNote": "Reference to users collection"
        },
        "projectId": {
          "fieldDescription": "Reference to parent project",
          "additionalNote": "Required field, links task to project"
        },
        "dueDate": {
          "fieldDescription": "Task due date",
          "additionalNote": "Optional field, used for deadline tracking"
        },
        "timeEstimate": {
          "fieldDescription": "Estimated time in hours",
          "additionalNote": "Used for project planning"
        },
        "timeSpent": {
          "fieldDescription": "Actual time spent in hours",
          "additionalNote": "Tracked for time management"
        }
      }
    },
    "notifications": {
      "collectionDescription": "User notifications and alerts",
      "collectionAdditionalNote": "Real-time notification system for user updates and alerts",
      "fields": {
        "userId": {
          "fieldDescription": "User ID receiving the notification",
          "additionalNote": "Reference to users collection"
        },
        "type": {
          "fieldDescription": "Notification type",
          "additionalNote": "Values: task_assigned, task_completed, project_invite"
        },
        "title": {
          "fieldDescription": "Notification title",
          "additionalNote": "Short descriptive title"
        },
        "message": {
          "fieldDescription": "Notification message",
          "additionalNote": "Detailed notification content"
        },
        "read": {
          "fieldDescription": "Whether notification has been read",
          "additionalNote": "Used for unread count tracking"
        },
        "data": {
          "fieldDescription": "Additional data for the notification",
          "additionalNote": "Stores related IDs and context"
        }
      }
    },
    "comments": {
      "collectionDescription": "Comments on tasks and projects",
      "collectionAdditionalNote": "Comment system with replies and like functionality",
      "fields": {
        "content": {
          "fieldDescription": "Comment content",
          "additionalNote": "Required field, the actual comment text"
        },
        "userId": {
          "fieldDescription": "User ID of comment author",
          "additionalNote": "Reference to users collection"
        },
        "taskId": {
          "fieldDescription": "Reference to task (if commenting on task)",
          "additionalNote": "Optional field, links comment to task"
        },
        "projectId": {
          "fieldDescription": "Reference to project (if commenting on project)",
          "additionalNote": "Optional field, links comment to project"
        },
        "likes": {
          "fieldDescription": "Number of likes on comment",
          "additionalNote": "Counter for comment popularity"
        },
        "replies": {
          "fieldDescription": "Comment replies",
          "additionalNote": "Nested subcollection for threaded comments"
        }
      }
    },
    "attachments": {
      "collectionDescription": "File attachments for tasks and projects",
      "collectionAdditionalNote": "File management system with metadata and storage integration",
      "fields": {
        "name": {
          "fieldDescription": "Original file name",
          "additionalNote": "Displayed to users"
        },
        "url": {
          "fieldDescription": "File storage URL",
          "additionalNote": "Link to file in Firebase Storage"
        },
        "type": {
          "fieldDescription": "MIME type of file",
          "additionalNote": "Used for file handling and display"
        },
        "size": {
          "fieldDescription": "File size in bytes",
          "additionalNote": "Used for storage quota tracking"
        },
        "uploadedBy": {
          "fieldDescription": "User ID who uploaded the file",
          "additionalNote": "Reference to users collection"
        },
        "metadata": {
          "fieldDescription": "Additional file metadata",
          "additionalNote": "Image dimensions, document properties, etc."
        }
      }
    },
    "analytics": {
      "collectionDescription": "Usage analytics and metrics",
      "collectionAdditionalNote": "Performance tracking and user activity monitoring",
      "fields": {
        "views": {
          "fieldDescription": "Number of views",
          "additionalNote": "Page or project view counter"
        },
        "uniqueVisitors": {
          "fieldDescription": "Number of unique visitors",
          "additionalNote": "Distinct user count"
        },
        "taskCompletions": {
          "fieldDescription": "Number of completed tasks",
          "additionalNote": "Productivity metric"
        },
        "averageTaskTime": {
          "fieldDescription": "Average time to complete tasks",
          "additionalNote": "Performance metric in hours"
        },
        "memberActivity": {
          "fieldDescription": "Activity tracking per member",
          "additionalNote": "Nested object with user-specific metrics"
        },
        "dailyStats": {
          "fieldDescription": "Daily statistics",
          "additionalNote": "Time-series data for trends"
        }
      }
    },
    "settings": {
      "collectionDescription": "Global application settings and configuration",
      "collectionAdditionalNote": "System-wide configuration and security settings",
      "fields": {
        "maxFileSize": {
          "fieldDescription": "Maximum allowed file size in bytes",
          "additionalNote": "Storage limit enforcement"
        },
        "allowedFileTypes": {
          "fieldDescription": "List of allowed file extensions",
          "additionalNote": "Security and compatibility control"
        },
        "maxProjectMembers": {
          "fieldDescription": "Maximum members per project",
          "additionalNote": "Resource limit control"
        },
        "defaultTheme": {
          "fieldDescription": "Default UI theme",
          "additionalNote": "Values: light, dark"
        },
        "maintenanceMode": {
          "fieldDescription": "Whether app is in maintenance mode",
          "additionalNote": "Emergency system control"
        },
        "security": {
          "fieldDescription": "Security settings",
          "additionalNote": "Password policies, session timeouts"
        }
      }
    }
  }
}
